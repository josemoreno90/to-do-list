<% include ./partials/header %>
<div class="container">
  <h1>Todos</h1>
  <!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-sm" style="margin:1%;"data-toggle="modal" data-target="#myModal">Create Todo</button>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Create Todo</h4>
      </div>
      <div class="modal-body">
        <form id="createTodo">
          Description<br>
          <textarea id="textArea" name="description" cols="40" rows="5"></textarea>
          <input type="submit" value="Submit">
        </form>
      </div>
    </div>

  </div>
</div>
  <% todos.forEach(todo => { %>
        <div class="row row-style">
          <div class='col-sm-8'>
            <%= todo.description %>
          </div>
          <div class='col-sm-4'>
          <button class="btn btn-success" id='edit'>Edit</button>
          <button class="btn btn-danger" id='delete'>Delete</button>
          </div>
        </div>
  <% }) %>
  <div id="listAppend"></div>
</div>
<% include ./partials/footer %>
